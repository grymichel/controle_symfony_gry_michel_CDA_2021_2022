{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ topic.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ topic.texte }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ topic.dateCreation ? topic.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_maj</th>
                <td>{{ topic.dateMaj ? topic.dateMaj|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_topic_index') }}">back to list</a>

    <a href="{{ path('app_topic_edit', {'id': topic.id}) }}">edit</a>

    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}
