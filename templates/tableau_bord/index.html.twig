{% extends 'base.html.twig' %}

{% block title %}Hello TableauBordController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row">
        {% for topic in topics %}
            <div class="card col">
                <div class="card-body">
                    <h5 class="card-title">{{ topic.titre }}</h5>
                    <h5 class="card-text">{{ topic.texte }}</h5>     
                    <h5 class="card-text">{{ topic.date_creation }}</h5> 
                    <h5 class="card-text">{{ topic.date_maj }}</h5>           
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% endblock %}
